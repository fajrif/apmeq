<p><small><%= "Display total #{@horses.count} horses" %></small></p>

<table class="table display product-overview mb-30">
  <thead>
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Name</th>
      <th>Sex</th>
      <th>Breed</th>
      <th>Category</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% for horse in @horses %>
      <tr>
				<td><%= horse.id %></td>
				<td><%= image_tag horse.image.variant(resize: "100x100").processed %></td>
				<td><%= link_to horse.name, admins_horse_path(horse) %></td>
				<td><%= horse.sex %></td>
				<td><%= horse.breed %></td>
				<td><%= horse.try(:category).try(:name) %></td>
        <td class="actions">
					<%= link_to admins_horse_path(horse), "data-toggle" => "tooltip", :title => "Edit" do %>
						<i class="fa fa-pencil"></i>
					<% end %>
					<%= link_to admins_horse_path(horse), :confirm => 'Are you sure?', :method => :delete, :class => 'text-inverse' do %>
						<i class="fa fa-trash"></i>
					<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @horses %>
