<%= simple_form_for [:admins, @service], :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.error_notification %>
	<div class="form-body">
		<%= f.input :image, as: :file %>
		<%= f.input :name %>
		<%= f.input :description, as: :text, input_html: { rows: "20" } %>
		<div class="form-actions">
			<div class="row">
				<div class="offset-md-3 col-md-9">
					<%= f.button :submit, :class => 'btn btn-primary' %>
					<% unless @service.new_record? %>
					<%= link_to "Cancel", admins_service_path(@service), :class => 'btn' %>
					<% else %>
					<%= link_to "Cancel", admins_services_path, :class => 'btn' %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>
