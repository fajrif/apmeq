<p><small><%= "Display total #{@facilities.count} facilities" %></small></p>

<table class="table display product-overview mb-30">
  <thead>
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% for facility in @facilities %>
      <tr>
				<td><%= facility.id %></td>
				<td><%= image_tag facility.image.variant(resize: "100x100").processed %></td>
				<td><%= facility.name %></td>
        <td class="actions">
					<%= link_to admins_facility_path(facility), "data-toggle" => "tooltip", :title => "Edit" do %>
						<i class="fa fa-pencil"></i>
					<% end %>
					<%= link_to admins_facility_path(facility), :confirm => 'Are you sure?', :method => :delete, :class => 'text-inverse' do %>
						<i class="fa fa-trash"></i>
					<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @facilities %>
