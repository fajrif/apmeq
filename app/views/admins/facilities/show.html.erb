<div class="page-bar">
	<div class="page-title-breadcrumb">
		<div class=" pull-left">
			<div class="page-title">Facility details</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12 col-sm-12">
		<div class="card card-box">
			<div class="card-body ">
				<div class="form-horizontal">
					<div class="form-body">
						<div class="form-group row">
							<label class="control-label col-md-3">ID</label>
							<div class="col-md-5">
								<%= @facility.id %>
							</div>
						</div>
						<div class="form-group row">
							<label class="control-label col-md-3">Image</label>
							<div class="col-md-5">
								<%= image_tag @facility.image.variant(resize: "379x252").processed %>
							</div>
						</div>
						<div class="form-group row">
							<label class="control-label col-md-3">Name</label>
							<div class="col-md-5">
								<%= @facility.name %>
							</div>
						</div>
						<div class="form-group row">
							<label class="control-label col-md-3">Category Name</label>
							<div class="col-md-5">
								<%= @facility.category_name.upcase %>
							</div>
						</div>
						<div class="form-group row">
							<label class="control-label col-md-3">Description</label>
							<div class="col-md-5">
								<%= @facility.description %>
							</div>
						</div>
						<div class="form-actions">
							<div class="row">
								<div class="offset-md-3 col-md-9">
									<%= link_to 'Edit', edit_admins_facility_path(@facility), :class => 'btn btn-warning' %>
									<%= link_to 'Destroy', admins_facility_path(@facility), :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger' %>
									<%= link_to 'View All', admins_facilities_path, :class => 'btn' %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
