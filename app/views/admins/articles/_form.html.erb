<%= simple_form_for [:admins, @article], :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.error_notification %>
	<div class="form-body">
		<%= f.input :image, as: :file %>
		<%= f.input :title %>
		<%= f.input :description, as: :text, input_html: { rows: "20" } %>
		<div class="form-actions">
			<div class="row">
				<div class="offset-md-3 col-md-9">
					<%= f.button :submit, :class => 'btn btn-primary' %>
					<% unless @article.new_record? %>
					<%= link_to "Cancel", admins_article_path(@article), :class => 'btn' %>
					<% else %>
					<%= link_to "Cancel", admins_articles_path, :class => 'btn' %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>
