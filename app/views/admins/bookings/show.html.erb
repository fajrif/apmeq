<div class="page-bar">
	<div class="page-title-breadcrumb">
		<div class=" pull-left">
			<div class="page-title">Booking details</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12 col-sm-12">
		<div class="card card-box">
			<div class="card-body ">
				<div class="form-horizontal">
					<div class="form-body">
						<div class="form-group row">
							<label class="control-label col-md-3">ID</label>
							<div class="col-md-5">
								<%= @booking.id %>
							</div>
						</div>
						<div class="form-group row">
							<label class="control-label col-md-3">Name</label>
							<div class="col-md-5">
								<%= @booking.name %>
							</div>
						</div>
						<div class="form-group row">
							<label class="control-label col-md-3">DOB</label>
							<div class="col-md-5">
								<%= @booking.dob %>
							</div>
						</div>
						<div class="form-group row">
							<label class="control-label col-md-3">Instructor</label>
							<div class="col-md-5">
								<%= @booking.try(:instructor).try(:name) %>
							</div>
						</div>
						<div class="form-group row">
							<label class="control-label col-md-3">Membership</label>
							<div class="col-md-5">
								<%= @booking.membership_label %>
							</div>
						</div>
						<div class="form-group row">
							<label class="control-label col-md-3">Date Lesson</label>
							<div class="col-md-5">
								<%= @booking.date_lesson %>
							</div>
						</div>
						<div class="form-group row">
							<label class="control-label col-md-3">Emergency Contact Name</label>
							<div class="col-md-5">
								<%= @booking.emergency_contact_name %>
							</div>
						</div>
						<div class="form-group row">
							<label class="control-label col-md-3">Emergency Contact Phone</label>
							<div class="col-md-5">
								<%= @booking.emergency_contact_phone %>
							</div>
						</div>
						<div class="form-actions">
							<div class="row">
								<div class="offset-md-3 col-md-9">
									<%= link_to 'Edit', edit_admins_booking_path(@booking), :class => 'btn btn-warning' %>
									<%= link_to 'Destroy', admins_booking_path(@booking), :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger' %>
									<%= link_to 'View All', admins_bookings_path, :class => 'btn' %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
