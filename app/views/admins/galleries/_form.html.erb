<%= simple_form_for [:admins, @gallery], :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.error_notification %>
	<div class="form-body">
		<%= f.input :image, as: :file %>
		<%= f.input :caption %>
		<div class="form-actions">
			<div class="row">
				<div class="offset-md-3 col-md-9">
					<%= f.button :submit, :class => 'btn btn-primary' %>
					<% unless @gallery.new_record? %>
					<%= link_to "Cancel", admins_gallery_path(@gallery), :class => 'btn' %>
					<% else %>
					<%= link_to "Cancel", admins_galleries_path, :class => 'btn' %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>
