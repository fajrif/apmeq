<!-- Start Breadcaump Area -->
<div class="brook-breadcaump-area pt--130 pb--50 bg_color--1 breadcaump-title-bar">
		<div class="container">
				<div class="row">
						<div class="col-lg-12">
								<div class="breadcaump-inner text-center">
										<h1 class="heading heading-h1">News & Events</h1>
								</div>
						</div>
				</div>
		</div>
</div>
<!-- End Breadcaump Area -->

<!-- Start Blog Grid Area -->
<div class="bk-blog-grid-area pt--70 pb--100 pt_md--80 pb_md--80 pb_sm--80 pt_sm--60 bg_color--1">
		<div class="container">
				<div class="row">
						<div class="col-lg-12">
								<div class="blog-mesonry bk-blog-masonry clearfix">
										<div class="mesonry-list">
												<div class="resizer"></div>
												<% @articles.each do |article| %>
												<!-- Start Single Blog -->
												<div class="blog-33-33 mb--60">
														<div class="blog-grid">
																<div class="post-thumb blog-slick-initial poss_relative">
																		<a href="<%= get_news_path(article) %>">
																			<%= image_tag(url_for(article.image)) %>
																		</a>
																</div>
																<div class="post-content">
																		<div class="post-inner">
																			<h5 class="heading heading-h5"><a href="<%= get_news_path(article) %>"><%= article.title %></a></h5>
																				<div class="post-meta">
																						<div class="post-date"><%= article.created_at.to_time.strftime("%b %d, %Y") %></div>
																				</div>
																		</div>
																</div>
														</div>
												</div>
												<!-- End Single Blog -->
												<% end %>
										</div>
								</div>
						</div>
				</div>

				<div class="row">
						<div class="col-lg-12">
								<div class="brook-pagination-wrapper text-center pt--80">
									<%= paginate @articles, theme: "brook" %>
								</div>
						</div>
				</div>
		</div>
</div>
<!-- End Blog Grid Area -->

