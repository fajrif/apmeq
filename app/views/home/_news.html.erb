<!-- Start Blog Area -->
<div class="bk-blog-area">
		<div class="black-bg-wrapper bg_image--4 section-pt-xl pb--320">
				<div class="container">
						<div class="row">
								<div class="col-lg-12">
										<div class="section-title text-center white-text wow move-up">
												<h3>LATEST NEWS</h3>
												<h2>From our news & events.</h2>
										</div>
								</div>
						</div>
				</div>
		</div>
		<div class="blog-wrapper pl--230 pr--230 pr_lp--100 pl_lp--100 pl_lg--100 pr_lg--100 pl_md--50 pr_md--50 pl_sm--30 pr_sm--30" style="padding-bottom:40px;">
				<div class="row row--0 space_dec--250">

					<% @articles.each do |article| %>
						<!-- Start Single Portfolio -->
						<div class="col-lg-6 col-xl-4 col-md-6 col-sm-12 col-12 wow move-up">
								<div class="blog blog-style--1">
										<div class="thumb">
											<%= link_to get_news_path(article) do %>
												<%= image_tag(article.image.variant(combine_options: { gravity: 'Center', crop: '413x419+0+0' }).processed) %>
											<% end %>
										</div>
										<div class="blog-content blog-position--bottom">
												<div class="content">
														<ul class="meta">
																<li><%= article.created_at.to_time.strftime("%b %d, %Y") %></li>
														</ul>
														<h3 class="the-title">
															<%= link_to article.title, get_news_path(article) %>
														</h3>
												</div>
										</div>
								</div>
						</div>
						<!-- End Single Portfolio -->
					<% end %>

				</div>
		</div>

</div>
<!-- End Blog Area -->
