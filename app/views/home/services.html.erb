<!-- Start Breadcaump Area -->
<div class="brook-breadcaump-area ptb--120 bg_color--1 breadcaump-title-bar">
	<div class="container-fluid plr--150 plr_md--50 plr_sm--50">
		<div class="row">
			<div class="col-lg-12">
				<div class="breadcaump-inner text-left">
					<h1 class="heading heading-h1 line-height-1-5">
						What we provide <br/>
						other than training <br/> in our facilities.
					</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- End Breadcaump Area -->

<!-- Start Service List -->
<div class="brook-service-list-area">
	<% @services.each do |service| %>
		<!-- Start Single Service -->
		<div class="bk-service-list d-block d-md-flex mb--100 align-items-center wow move-up">
			<div class="thumb">
				<%= image_tag(url_for(service.image), :class => "w-120") %>
			</div>
			<div class="content pl--150 plr_md--50 plr_sm--40">
				<h3 class="heading heading-h3"><%= service.name %></h3>
				<div class="bkseparator--35"></div>
				<p class="bk_pra">
					<%= service.description %>
				</p>
			</div>
		</div>
		<!-- End Single Service -->
	<% end %>
</div>
<!-- End Service List -->
